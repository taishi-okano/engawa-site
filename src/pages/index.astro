    .hero-tagline {
      font-family: 'Lora', serif;
      font-size: 1.15rem;
      font-style: italic;
      line-height: 1.65;
      max-width: 26ch;
      opacity: 0.6;
      position: absolute;
      bottom: 15%;
      right: 3rem;
      text-align: right;
      z-index: 50;
    }

    .sphere-container {
      position: absolute;
      width: 500px;
      height: 500px;
      animation: sphereFloat 8s ease-in-out infinite;
      filter: drop-shadow(0 60px 140px rgba(28, 25, 23, 0.3));
    }

    @keyframes sphereFloat {
      0%, 100% { transform: translateY(0) translateX(0); }
