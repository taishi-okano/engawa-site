    .hero-caption {
      font-size: 0.7rem;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      opacity: 0.5;
      font-weight: 500;
      position: absolute;
      top: 15%;
      left: 3rem;
      z-index: 50;
