  <script is:inline>
    // ===== Dense Flower of Life 3D Sphere =====
    // Reference photo: crystal ball with intricate, dense overlapping circles
    // and fine radial lines creating a "Flower of Life / Sacred Geometry" look.
    (function() {
      const canvas = document.getElementById('sphereCanvas');
      const container = document.getElementById('sphereContainer');
      if (!canvas || !container) return;

      const renderer = new THREE.WebGLRenderer({ canvas, alpha: true, antialias: true });
      renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
      renderer.setSize(500, 500);

      const scene = new THREE.Scene();
      const camera = new THREE.PerspectiveCamera(38, 1, 0.1, 100);
      camera.position.z = 4.2;

      const group = new THREE.Group();
      scene.add(group);

      const R = 1.45;

      // --- Colors ---
      const kakishibu     = new THREE.Color('#D4976C');
      const kakishibuLight = new THREE.Color('#DEB892');
      const creamLine      = new THREE.Color('#C8A882');
      const fineDetail     = new THREE.Color('#BFA07A');
      const sumiLight      = new THREE.Color('#8A7E76');
      const warmWhite      = new THREE.Color('#FFF8F0');

      // === Base sphere ===
      const baseMat = new THREE.MeshPhysicalMaterial({
        color: new THREE.Color('#F5EDE0'),
        transparent: true, opacity: 0.38,
        roughness: 0.3, metalness: 0.05,
        clearcoat: 0.6, clearcoatRoughness: 0.2,
        side: THREE.FrontSide,
      });
      group.add(new THREE.Mesh(new THREE.SphereGeometry(R, 64, 64), baseMat));

      // === Inner glow ===
      const glowMat = new THREE.MeshPhysicalMaterial({
        color: new THREE.Color('#FFF5EA'),
        transparent: true, opacity: 0.22,
        roughness: 0.6,
        emissive: new THREE.Color('#F5E6D0'), emissiveIntensity: 0.2,
        side: THREE.FrontSide,
      });
      group.add(new THREE.Mesh(new THREE.SphereGeometry(R * 0.9, 48, 48), glowMat));

      // ======= FLOWER OF LIFE PATTERN =======

      // Helper: Fibonacci sphere point distribution
      function fibSphere(n) {
        const pts = [];
        const phi = Math.PI * (3 - Math.sqrt(5));
        for (let i = 0; i < n; i++) {
          const y = 1 - (i / (n - 1)) * 2;
          const r = Math.sqrt(1 - y * y);
          const th = phi * i;
          pts.push(new THREE.Vector3(Math.cos(th) * r, y, Math.sin(th) * r).normalize());
        }
        return pts;
      }

      // Helper: draw a circle (line loop) on the sphere surface at a given normal direction
      function makeCircle(normal, radius, color, opacity, segs) {
        segs = segs || 48;
        // Build a local frame
        const n = normal.clone().normalize();
        let up = new THREE.Vector3(0, 1, 0);
        if (Math.abs(n.dot(up)) > 0.99) up = new THREE.Vector3(1, 0, 0);
        const t1 = new THREE.Vector3().crossVectors(n, up).normalize();
        const t2 = new THREE.Vector3().crossVectors(n, t1).normalize();

        const verts = [];
        for (let i = 0; i <= segs; i++) {
          const a = (i / segs) * Math.PI * 2;
          const p = n.clone().multiplyScalar(R * 0.998)
            .add(t1.clone().multiplyScalar(Math.cos(a) * radius))
            .add(t2.clone().multiplyScalar(Math.sin(a) * radius));
          verts.push(p);
        }
        const geom = new THREE.BufferGeometry().setFromPoints(verts);
        return new THREE.Line(geom, new THREE.LineBasicMaterial({
          color, transparent: true, opacity
        }));
      }

      // Helper: radial "petal" lines from a center on the sphere
      function makePetals(normal, petalLen, numPetals, color, opacity) {
        const n = normal.clone().normalize();
        let up = new THREE.Vector3(0, 1, 0);
        if (Math.abs(n.dot(up)) > 0.99) up = new THREE.Vector3(1, 0, 0);
        const t1 = new THREE.Vector3().crossVectors(n, up).normalize();
        const t2 = new THREE.Vector3().crossVectors(n, t1).normalize();
        const center = n.clone().multiplyScalar(R * 0.998);

        const lines = [];
        for (let i = 0; i < numPetals; i++) {
          const a = (i / numPetals) * Math.PI * 2;
          const end = center.clone()
            .add(t1.clone().multiplyScalar(Math.cos(a) * petalLen))
            .add(t2.clone().multiplyScalar(Math.sin(a) * petalLen));
          const geom = new THREE.BufferGeometry().setFromPoints([center, end]);
          lines.push(new THREE.Line(geom, new THREE.LineBasicMaterial({
            color, transparent: true, opacity
          })));
        }
        return lines;
      }

      // Helper: great-circle arc between two sphere surface points
      function makeArc(p1, p2, color, opacity, steps) {
        steps = steps || 24;
        const d1 = p1.clone().normalize();
        const d2 = p2.clone().normalize();
        const omega = Math.acos(Math.max(-1, Math.min(1, d1.dot(d2))));
        if (omega < 0.001) return null;
        const pts = [];
        for (let s = 0; s <= steps; s++) {
          const t = s / steps;
          const interp = d1.clone().multiplyScalar(Math.sin((1 - t) * omega) / Math.sin(omega))
            .add(d2.clone().multiplyScalar(Math.sin(t * omega) / Math.sin(omega)));
          pts.push(interp.multiplyScalar(R * 0.998));
        }
        const geom = new THREE.BufferGeometry().setFromPoints(pts);
        return new THREE.Line(geom, new THREE.LineBasicMaterial({
          color, transparent: true, opacity
        }));
      }

      const flowerGroup = new THREE.Group();

      // ---- Layer 1: Primary Flower of Life circles (dense, 150 points) ----
      const primaryPts = fibSphere(150);
      const primaryR = 0.2;
      primaryPts.forEach(pt => {
        flowerGroup.add(makeCircle(pt, primaryR, kakishibu, 0.5, 48));
      });

      // ---- Layer 2: Overlapping medium circles (90 points, larger radius) ----
      const medPts = fibSphere(90);
      const medR = 0.34;
      medPts.forEach(pt => {
        flowerGroup.add(makeCircle(pt, medR, kakishibuLight, 0.22, 48));
      });

      // ---- Layer 3: "Seed of Life" radial petals at each primary node ----
      primaryPts.forEach(pt => {
        const petals = makePetals(pt, primaryR * 0.9, 6, creamLine, 0.35);
        petals.forEach(l => flowerGroup.add(l));
      });

      // ---- Layer 4: Fine detail circles (250 points, very small) ----
      const finePts = fibSphere(250);
      const fineR = 0.08;
      finePts.forEach(pt => {
        flowerGroup.add(makeCircle(pt, fineR, fineDetail, 0.22, 20));
      });

      // ---- Layer 5: Connecting arcs (nearest-neighbor web) ----
      const arcPts = fibSphere(100);
      arcPts.forEach((pt, i) => {
        // Find 3 nearest neighbors
        let neighbors = arcPts
          .map((o, j) => ({ j, d: pt.distanceTo(o) }))
          .filter(x => x.j !== i)
          .sort((a, b) => a.d - b.d);

        for (let n = 0; n < 3; n++) {
          const arc = makeArc(pt, arcPts[neighbors[n].j], kakishibu, 0.14, 20);
          if (arc) flowerGroup.add(arc);
        }
      });

      // ---- Layer 6: Secondary petal details at medium points ----
      medPts.forEach(pt => {
        const petals = makePetals(pt, medR * 0.7, 12, fineDetail, 0.15);
        petals.forEach(l => flowerGroup.add(l));
      });

      // ---- Layer 7: Large structural rings (20 points) ----
      const largePts = fibSphere(20);
      const largeR = 0.55;
      largePts.forEach(pt => {
        flowerGroup.add(makeCircle(pt, largeR, kakishibuLight, 0.1, 64));
      });

      group.add(flowerGroup);

      // === Subtle geodesic wireframe ===
      const icoEdges = new THREE.EdgesGeometry(new THREE.IcosahedronGeometry(R * 1.001, 3));
      group.add(new THREE.LineSegments(icoEdges, new THREE.LineBasicMaterial({
        color: sumiLight, transparent: true, opacity: 0.035
      })));

      // === Outer glass shell ===
      const shellMat = new THREE.MeshPhysicalMaterial({
        color: new THREE.Color('#FFFFFF'),
        transparent: true, opacity: 0.06,
        roughness: 0.05, metalness: 0.1,
        clearcoat: 1.0, clearcoatRoughness: 0.05,
        side: THREE.FrontSide,
      });
      group.add(new THREE.Mesh(new THREE.SphereGeometry(R * 1.01, 64, 64), shellMat));

      // ===== Lighting =====
      scene.add(new THREE.AmbientLight(warmWhite, 0.9));
      const key = new THREE.DirectionalLight(new THREE.Color('#FFF5E8'), 1.2);
      key.position.set(3, 4, 5); scene.add(key);
      const fill = new THREE.DirectionalLight(new THREE.Color('#E8DDD0'), 0.5);
      fill.position.set(-3, -1, 3); scene.add(fill);
      const rim = new THREE.DirectionalLight(new THREE.Color('#D4976C'), 0.35);
      rim.position.set(0, -3, -3); scene.add(rim);

      // ===== Animate =====
      function animate() {
        requestAnimationFrame(animate);
        group.rotation.y += 0.002;
        group.rotation.x += 0.0008;
        renderer.render(scene, camera);
      }
      animate();

      // ===== Resize =====
      function onResize() {
        const w = container.clientWidth, h = container.clientHeight;
        renderer.setSize(w, h);
        camera.aspect = w / h;
        camera.updateProjectionMatrix();
      }
      window.addEventListener('resize', onResize);
      onResize();
    })();

    // ===== Scroll parallax =====
    (function() {
      const sc = document.getElementById('sphereContainer');
      const title = document.getElementById('title');
      const caption = document.getElementById('caption');
      const tagline = document.getElementById('tagline');

      window.addEventListener('scroll', () => {
        const y = window.scrollY, h = window.innerHeight;
        const p = Math.min(y / h, 2);
        if (!sc) return;

        if (p <= 1) {
          const s = 1 + (p * 3);
          sc.style.transform = `translateY(${-50 * Math.sin(Date.now() / 4000)}px) scale(${s})`;
          sc.style.opacity = '1';
          if (title) title.style.opacity = (1 - p);
          if (caption) caption.style.opacity = (0.5 - p * 0.5);
          if (tagline) tagline.style.opacity = (0.6 - p * 0.6);
        } else {
          const p2 = p - 1;
          sc.style.transform = `scale(${4 + p2 * 6})`;
          sc.style.opacity = (1 - p2 * 0.95).toString();
        }
      });
    })();
  </script>
