  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
  <script is:inline>
    (function() {
      const canvas = document.getElementById('sphereCanvas');
      const container = document.getElementById('sphereContainer');
      if (!canvas || !container || typeof THREE === 'undefined') return;

      const renderer = new THREE.WebGLRenderer({ canvas, alpha: true, antialias: true });
      renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
      renderer.setSize(500, 500);

      const scene = new THREE.Scene();
      const camera = new THREE.PerspectiveCamera(38, 1, 0.1, 100);
      camera.position.z = 4.2;

      const group = new THREE.Group();
      scene.add(group);
      const R = 1.45;

      // Color Definitions (Fixed Reference Errors)
      const kakishibu = new THREE.Color('#D4976C');
      const sumiLight = new THREE.Color('#8A7E76');
      const warmWhite = new THREE.Color('#FFF8F0');

      // Geometries
      function fibSphere(n) {
        const pts = [];
        const phi = Math.PI * (3 - Math.sqrt(5));
        for (let i = 0; i < n; i++) {
          const y = 1 - (i / (n - 1)) * 2;
          const r = Math.sqrt(1 - y * y);
          const th = phi * i;
          pts.push(new THREE.Vector3(Math.cos(th) * r, y, Math.sin(th) * r).normalize());
        }
        return pts;
      }

      function makeCircle(normal, radius, color, opacity) {
        const n = normal.clone().normalize();
        let up = new THREE.Vector3(0, 1, 0);
        if (Math.abs(n.dot(up)) > 0.99) up = new THREE.Vector3(1, 0, 0);
        const t1 = new THREE.Vector3().crossVectors(n, up).normalize();
        const t2 = new THREE.Vector3().crossVectors(n, t1).normalize();
        const verts = [];
        for (let i = 0; i <= 64; i++) {
          const a = (i / 64) * Math.PI * 2;
          verts.push(n.clone().multiplyScalar(R * 0.998).add(t1.clone().multiplyScalar(Math.cos(a) * radius)).add(t2.clone().multiplyScalar(Math.sin(a) * radius)));
        }
        const geom = new THREE.BufferGeometry().setFromPoints(verts);
        return new THREE.Line(geom, new THREE.LineBasicMaterial({ color, transparent: true, opacity }));
      }

      // Layering Flower of Life
      fibSphere(150).forEach(pt => group.add(makeCircle(pt, 0.2, kakishibu, 0.5)));
      fibSphere(90).forEach(pt => group.add(makeCircle(pt, 0.34, kakishibu, 0.2)));
      
      const icoEdges = new THREE.EdgesGeometry(new THREE.IcosahedronGeometry(R * 1.001, 3));
      group.add(new THREE.LineSegments(icoEdges, new THREE.LineBasicMaterial({ color: sumiLight, transparent: true, opacity: 0.05 })));

      scene.add(new THREE.AmbientLight(warmWhite, 0.9));

      function animate() {
        requestAnimationFrame(animate);
        group.rotation.y += 0.002;
        group.rotation.x += 0.0008;
        renderer.render(scene, camera);
      }
      animate();

      window.addEventListener('scroll', () => {
        const y = window.scrollY, h = window.innerHeight, p = Math.min(y / h, 1);
        if (container) {
          container.style.transform = `scale(${1 + p * 3})`;
          container.style.opacity = (1 - p * 0.3).toString();
        }
      });
    })();
  </script>
