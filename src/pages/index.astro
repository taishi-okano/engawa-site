    .hero-content {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    .hero-title {
      font-family: 'Lora', serif;
      font-size: clamp(4rem, 10vw, 9rem);
      font-weight: 600;
      line-height: 0.9;
      letter-spacing: -0.03em;
